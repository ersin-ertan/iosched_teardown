<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ca.ersin.iosched_teardown">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <activity
            android:name=".ui.activity.launch.LauncherActivity"
            android:theme="@style/AppTheme.Launcher" />

        <activity
            android:name=".ui.activity.main.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ui.activity.onboarding.OnboardingActivity"
            android:theme="@style/AppTheme.Onboarding" />

        <!--<activity-->
            <!--android:name=".ui.sessiondetail.SessionDetailActivity"-->
            <!--android:parentActivityName=".ui.MainActivity"-->
            <!--android:theme="@style/AppTheme.SessionDetails" />-->

        <!--<activity-->
            <!--android:name=".ui.speaker.SpeakerActivity"-->
            <!--android:parentActivityName=".ui.MainActivity"-->
            <!--android:theme="@style/AppTheme.Speaker" />-->

        <activity
            android:name=".ui.activity.map.MapActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity-alias
            android:name=".Launcher"
            android:label="@string/app_name"
            android:targetActivity=".ui.activity.launch.LauncherActivity">
        <!--android:targetActivity=".ui.MyNewLauncher" >-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

    </application>

</manifest>